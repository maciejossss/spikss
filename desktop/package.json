{
  "name": "serwis-desktop",
  "version": "1.0.0",
  "description": "Aplikacja desktopowa systemu serwisowego",
  "main": "src/electron/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:vue\" \"wait-on http://localhost:5173 && npm run dev:electron\"",
    "dev:vue": "vite --port 5173 --host",
    "dev:electron": "set NODE_ENV=development && electron .",
    "dev:electron-win": "set NODE_ENV=development && electron .",
    "build": "npm run build:vue && npm run build:electron",
    "build:vue": "vite build",
    "build:electron": "electron-builder",
    "preview": "vite preview",
    "electron": "electron .",
    "pack": "electron-builder",
    "dist": "npm run build && electron-builder"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^6.5.0",
    "@vueuse/core": "^10.0.0",
    "bcryptjs": "^2.4.3",
    "chart.js": "^4.4.0",
    "cors": "^2.8.5",
    "dayjs": "^1.11.0",
    "electron-store": "^8.1.0",
    "express": "^4.18.0",
    "jsonwebtoken": "^9.0.0",
    "pinia": "^2.1.0",
    "leaflet": "^1.9.4",
    "sqlite3": "^5.1.0",
    "uuid": "^9.0.0",
    "vue": "^3.4.0",
    "vue-router": "^4.2.0",
    "node-fetch": "^3.3.2",
    "pdfkit": "^0.13.0"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.0",
    "@vitejs/plugin-vue": "^5.0.0",
    "autoprefixer": "^10.4.0",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0",
    "electron-rebuild": "^3.2.9",
    "postcss": "^8.4.0",
    "tailwindcss": "^3.4.0",
    "vite": "^5.0.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.serwis.desktop",
    "productName": "System Serwisowy",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist/**/*",
      "src/electron/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "src/assets/icon.ico"
    }
  }
}
